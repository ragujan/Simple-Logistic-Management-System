    <error-page>
        <error-code>403</error-code>
        <location>/403.jsp</location>
    </error-page>
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>merchant</role-name>
    </security-role>
</web-app>